<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#A40000"
        app:cardElevation="0dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/log_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_robot_white"
            app:tint="#FFFFFF"
            android:contentDescription="Log Icon" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/log_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot Started (System Check OK)"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular" />

        <TextView
            android:id="@+id/log_item_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="August 19, 2025. 10:40 PM"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular" />
    </LinearLayout>

</LinearLayout>