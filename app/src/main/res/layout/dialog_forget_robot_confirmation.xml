<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Using custom PNG icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/warning"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:contentDescription="Warning" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Robot?"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to forget this robot? This action cannot be undone and you will need to reconnect the robot again."
        android:textColor="#666666"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="4sp"
        android:layout_marginBottom="24dp" />

</LinearLayout>