<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context=".LogsActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_red_button_bg"
        android:contentDescription="Back"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/notificationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Notifications"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:tint="#000000" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_black"
        android:text="LOGS"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <LinearLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:background="@drawable/search_outline_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            app:tint="#000"
            android:contentDescription="@null"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search"
            android:background="@android:color/transparent"
            android:paddingStart="0dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:autofillHints="search"
            android:inputType="text"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Today"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/icon_background_1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_red_button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_robot_white"
                        app:tint="#FFFFFF"
                        android:contentDescription="Log Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_1"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_1"
                        app:layout_constraintTop_toTopOf="@id/icon_background_1"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_1" />
                    <TextView
                        android:id="@+id/log_title_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Robot Started (System Check OK)"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/log_timestamp_1"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/log_timestamp_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="August 19, 2025. 10:40 PM"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/log_title_1"
                        app:layout_constraintTop_toBottomOf="@id/log_title_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/icon_background_2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_red_button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_wifi_white"
                        app:tint="#FFFFFF"
                        android:contentDescription="Log Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_2"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_2"
                        app:layout_constraintTop_toTopOf="@id/icon_background_2"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_2" />
                    <TextView
                        android:id="@+id/log_title_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Wi-Fi Connected"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/log_timestamp_2"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/log_timestamp_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="August 19, 2025. 10:41 PM"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/log_title_2"
                        app:layout_constraintTop_toBottomOf="@id/log_title_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/icon_background_3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_red_button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fire2"
                        app:tint="#FFFFFF"
                        android:contentDescription="Log Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_3"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_3"
                        app:layout_constraintTop_toTopOf="@id/icon_background_3"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_3" />
                    <TextView
                        android:id="@+id/log_title_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Flame Sensor Triggered (Front)"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/log_timestamp_3"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/log_timestamp_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="August 19, 2025. 10:41 PM"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/log_title_3"
                        app:layout_constraintTop_toBottomOf="@id/log_title_3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/icon_background_4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_red_button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_camera_white"
                        app:tint="#FFFFFF"
                        android:contentDescription="Log Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_4"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_4"
                        app:layout_constraintTop_toTopOf="@id/icon_background_4"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_4" />
                    <TextView
                        android:id="@+id/log_title_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Camera Streaming Activated"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/log_timestamp_4"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/log_timestamp_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="August 19, 2025. 10:41 PM"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/log_title_4"
                        app:layout_constraintTop_toBottomOf="@id/log_title_4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/icon_background_5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_red_button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fire_extinguisher"
                        app:tint="#FFFFFF"
                        android:contentDescription="Log Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_5"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_5"
                        app:layout_constraintTop_toTopOf="@id/icon_background_5"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_5" />
                    <TextView
                        android:id="@+id/log_title_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Fire Extinguisher, Robot Idle"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/log_timestamp_5"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/log_timestamp_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="August 19, 2025. 10:41 PM"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/log_title_5"
                        app:layout_constraintTop_toBottomOf="@id/log_title_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="August 10, 2025"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/icon_background_6"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_red_button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_robot_white"
                        app:tint="#FFFFFF"
                        android:contentDescription="Log Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_6"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_6"
                        app:layout_constraintTop_toTopOf="@id/icon_background_6"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_6" />
                    <TextView
                        android:id="@+id/log_title_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Robot Activated by User"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/log_timestamp_6"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/log_timestamp_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="August 05, 2025. 3:00 PM"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/log_title_6"
                        app:layout_constraintTop_toBottomOf="@id/log_title_6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/icon_background_7"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_red_button_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_exclamation"
                        app:tint="#FFFFFF"
                        android:contentDescription="Log Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_7"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_7"
                        app:layout_constraintTop_toTopOf="@id/icon_background_7"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_7" />
                    <TextView
                        android:id="@+id/log_title_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Gas Detected"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/log_timestamp_7"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <TextView
                        android:id="@+id/log_timestamp_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="August 05, 2025. 3:05 PM"
                        android:textColor="#555555"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/log_title_7"
                        app:layout_constraintTop_toBottomOf="@id/log_title_7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="6"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/nav_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_live_default"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_fire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fire_extinguisher"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_battery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_battery_default"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history_default"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
