<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".HistoryActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_icon_bg"
        android:backgroundTint="#A40000"
        android:contentDescription="Back"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/notificationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Notifications"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:tint="#000000" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="HISTORY"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins_black"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        android:background="@drawable/search_outline_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            app:tint="#000"
            android:contentDescription="@null" />

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:autofillHints="search"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_filter_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/search_bar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/date_outline_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="14dp"
            android:gravity="center"
            android:backgroundTint="#A40000">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_calendar_white"
                app:tint="#FFFFFF"
                android:layout_marginEnd="6dp"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_down_white"
                app:tint="#FFFFFF"
                android:layout_marginStart="6dp"
                android:contentDescription="@null" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_filter_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_alarm_triggered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#222222">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/icon_background_1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_icon_bg"
                        android:backgroundTint="#A40000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:id="@+id/event_icon_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bell"
                        app:tint="#FFFFFF"
                        android:contentDescription="Event Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_1"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_1"
                        app:layout_constraintTop_toTopOf="@id/icon_background_1"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_1" />
                    <TextView
                        android:id="@+id/event_title_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Alarm Triggered"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_1"/>
                    <TextView
                        android:id="@+id/event_description_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Activated"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/event_title_1"
                        app:layout_constraintTop_toBottomOf="@id/event_title_1"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_1"/>
                    <TextView
                        android:id="@+id/event_timestamp_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, 10:23 AM"
                        android:textColor="#AAAAAA"
                        android:textSize="8sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_gas_detected"  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#222222">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/icon_background_2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_icon_bg"
                        android:backgroundTint="#A40000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:id="@+id/event_icon_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_gas_smoke"
                        app:tint="#FFFFFF"
                        android:contentDescription="Event Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_2"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_2"
                        app:layout_constraintTop_toTopOf="@id/icon_background_2"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_2" />
                    <TextView
                        android:id="@+id/event_title_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Gas Detected"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_2"/>
                    <TextView
                        android:id="@+id/event_description_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="High ppm Level"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/event_title_2"
                        app:layout_constraintTop_toBottomOf="@id/event_title_2"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_2"/>
                    <TextView
                        android:id="@+id/event_timestamp_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yesterday, 4:55 PM"
                        android:textColor="#AAAAAA"
                        android:textSize="8sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_fire_detected"  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#222222">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/icon_background_3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_icon_bg"
                        android:backgroundTint="#A40000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:id="@+id/event_icon_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fire2"
                        app:tint="#FFFFFF"
                        android:contentDescription="Event Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_3"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_3"
                        app:layout_constraintTop_toTopOf="@id/icon_background_3"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_3" />
                    <TextView
                        android:id="@+id/event_title_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Fire Detected"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_3"/>
                    <TextView
                        android:id="@+id/event_description_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="High Level"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/event_title_3"
                        app:layout_constraintTop_toBottomOf="@id/event_title_3"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_3"/>
                    <TextView
                        android:id="@+id/event_timestamp_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04/24/2025, 2:10 AM"
                        android:textColor="#AAAAAA"
                        android:textSize="8sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_sms_alert"  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#222222">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/icon_background_4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_icon_bg"
                        android:backgroundTint="#A40000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="Icon Background" />
                    <ImageView
                        android:id="@+id/event_icon_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chat_default"
                        app:tint="#FFFFFF"
                        android:contentDescription="Event Icon"
                        app:layout_constraintStart_toStartOf="@id/icon_background_4"
                        app:layout_constraintEnd_toEndOf="@id/icon_background_4"
                        app:layout_constraintTop_toTopOf="@id/icon_background_4"
                        app:layout_constraintBottom_toBottomOf="@id/icon_background_4" />
                    <TextView
                        android:id="@+id/event_title_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SMS Alert Sent"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_4"/>
                    <TextView
                        android:id="@+id/event_description_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Alerted Fire Station"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="@id/event_title_4"
                        app:layout_constraintTop_toBottomOf="@id/event_title_4"
                        app:layout_constraintEnd_toStartOf="@+id/event_timestamp_4"/>
                    <TextView
                        android:id="@+id/event_timestamp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04/23/2025, 11:45 AM"
                        android:textColor="#AAAAAA"
                        android:textSize="8sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="6"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_live_default"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_fire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fire_extinguisher"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_battery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_battery_default"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history_default"
                app:tint="#A40000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="10sp"
                android:textColor="#A40000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat_default"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_logs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logs_default"
                app:tint="#000000"
                android:contentDescription="Navigation Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logs"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>